{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "^tasks\\.ya?ml$",
        "^uds-bundle\\.ya?ml$"
      ],
      "matchStrings": [
        "- name: PACKAGE_VERSION\\s*\\n\\s*description: \"Version of the Core Base package\"\\s*\\n\\s*default: \"(?<currentValue>[^\"]+)\"",
        "\\bversion:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)(?:-[A-Za-z0-9_.-]+)?\\b",
        "\\bref:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)(?:-[A-Za-z0-9_.-]+)?\\b"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "defenseunicorns/uds-core",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["custom.regex"],
      "matchPackageNames": ["defenseunicorns/uds-core"],
      "groupName": "Core Base Package",
      "semanticCommitType": "deps",
      "semanticCommitScope": "core",
      "commitMessageTopic": "Core Base package"
    }
  ]
}